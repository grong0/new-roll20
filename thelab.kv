ImagesExample:


<ImagesExample@GridLayout>:
    cols: 3
    Image:
        source: "images/super_teemo.jpg"
    Image:
        source: "images/super_teemo.jpg"
        allow_stretch: True
    Image:
        source: "images/super_teemo.jpg"
        allow_stretch: True # default is false
        keep_ratio: False # default is true

<WidgetsExample>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state: root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Click here"
        on_press: root.on_button_click()
        disabled: not root.state
    Label:
        text: root.my_text
        font_name: "fonts/ArchivoBlack-Regular.ttf"
        font_size: "80dp"
        color: 1, .5, 1, 1
    Switch:
        id: my_switch
        active: True
        on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
    Slider:
        id: my_slider
        # defualt is 0 - 100 and starting pos 0
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/ArchivoBlack-Regular.ttf"
            font_size: "80dp"
            color: .5, 1, 1, 1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: text_input
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False # default is true
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Your name is " + root.text_input_str

