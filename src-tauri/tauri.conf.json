{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "new-roll20",
  "version": "0.1.0",
  "identifier": "com.garrett.new-roll20",
  "build": {
    "frontendDist": "../src",
	"beforeBuildCommand": "npm run build-css"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "new-roll20",
        "width": 1600,
        "height": 950
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
